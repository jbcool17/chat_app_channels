source 'https://rubygems.org'
ruby '2.3.0'

gem 'sinatra'
gem 'sinatra-contrib'
gem 'rake'
gem 'faker'

# Sockets
gem 'sinatra-websocket'
gem 'faye'

# DATABASE
gem 'sinatra-activerecord'
gem 'activesupport'
gem 'pg'
gem 'sqlite3'

group :development do
  gem 'sqlite3'
  gem 'pry'
  gem "capistrano"
  gem "capistrano-bundler"
  gem "capistrano-passenger"
  gem 'capistrano-rvm'
end

group :test do
  gem 'rspec'
  gem 'rack-test'
  gem 'guard'
  gem 'guard-rspec'
  gem 'foreman'
end
